<Window x:Class="Gorkogo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gorkogo"
        mc:Ignorable="d"
        Title="Прокат Горького" Height="250" Width="400">
    <Viewbox>
    <Grid>
        <Label Margin="67,32,252,152" FontSize="18" Content="Логин" RenderTransformOrigin="0.5,0.5"/>
        <Label Margin="67,72,252,112" FontSize="18" Content="Пароль" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="login" Margin="159,32,59,152" FontSize="18"/>
        <TextBox x:Name="pass" Margin="159,72,59,112" FontSize="18"/>
        <Button x:Name="Avtorizacia" FontSize="18" Content="Авторизоваться" Margin="107,142,111,42" Click="AvtorizaciaClick"></Button>
        <CheckBox Margin="159,115,59,82" FontSize="12" Unchecked="CheckBoxUnchecked" Checked="CheckBoxChecked">Показать/скрыть пароль</CheckBox>
        <PasswordBox x:Name="passBox" Margin="159,72,59,112" FontSize="18"></PasswordBox>
    </Grid>
    </Viewbox>
</Window>
